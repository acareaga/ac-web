.page-inner

        div(style='height: 100%')
            carousel(interval='myInterval')
                slide(active='slide.active', ng-repeat='slide in slides')
                    img(style='margin:auto;', ng-src='{{slide.image}}')
                    .carousel-caption
                        h4 Slide {{$index}}
                        p {{slide.text}}


