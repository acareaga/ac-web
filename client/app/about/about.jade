#news-blog-event-content.container
    #top-link.visible-xs-block
        i.fa.fa-chevron-up
        br
        | Top
    .row
        header.col-xs-12
            #header-inner
                h1
                    | About - Avalanche Canada
                #sponsor-desktop.hidden-xs
                    p Brought to you by
                    a(target='_blank', href='http://marmot.com/ ')
                        img(src='http://res.cloudinary.com/avalanche-ca/image/upload/v1415214686/logos/Marmot_for_life_dutncq.svg ')
                .blue-border
        .col-xs-12
            /// #sponsor-ad-container
               /// p#sponsor-text.hidden-xs Thanks To Our Title Sponsor
               /// a#sponsor-link(title='Smith Optics', target='_blank', href='http://www.smithoptics.com/')
               ///     img.img-responsive(alt='Smith Optics', src='assets/images/sponsor-mobile-smith-logo.png')
        #news-blog-event-landing-content
            section#news-blog-event-landing-body
                #overview(ng-bind-html='overview')
                #vision(ng-bind-html='vision')
                #board(ng-bind-html='board')
                #staff
                    li(ng-repeat='member in staff')
                        {{member.getText('staff.title')}}
                        {{member.getText('staff.full_name')}}
                        {{member.getText('staff.email')}}
                        {{member.getText('staff.phone')}}
                #awards(ng-bind-html='awards')
                #contact(ng-bind-html='contact')
    .push
div.footer(ng-include='"components/footer/footer.html"')
