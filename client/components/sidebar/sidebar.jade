
div(ng-controller='SidebarCtrl')
    h3 Latest
    article.first.sidebar-related(ng-repeat='item in items')
        h4
            a(href='{{item.link}}' ng-bind-html='item.title')
    ul.sidebar-related-links
        li
            h5 Share This &nbsp;
                a(href="https://twitter.com/intent/tweet?url={{url}}")
                    i.fa.fa-twitter.fa-fw.fa-lg

                a(href="https://www.facebook.com/sharer/sharer.php?u={{url}}")
                    i.fa.fa-facebook.fa-fw.fa-lg

                a(href="https://plus.google.com/share?url={{url}}")
                    i.fa.fa-google-plus.fa-fw.fa-lg
        li
            h5 Follow Us &nbsp;
                a(href="https://twitter.com/avalancheca")
                    i.fa.fa-twitter.fa-fw.fa-lg

                a(href="https://www.facebook.com/avalanchecanada")
                    i.fa.fa-facebook.fa-fw.fa-lg
        li
            h5 Contact Us &nbsp;
                a(href="mailto:info@avalanche.ca")
                    i.fa.fa-envelope.fa-fw.fa-lg

