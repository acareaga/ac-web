div.ac-forecast-mini(ng-show="current.region && current.region.forecast", ac-map-drawer, region="current.region", class="ac-drawer")
    .row
        .col-xs-12
            h3.ac-forecast-region {{ current.region.polygon.feature.properties.name }}
    .row.ac-forecast-dates
        .col-xs-6
            dl
                dd.small
                    strong.ac-text-primary DATE ISSUED 
                dt.small
                    span.ac-text-default {{ current.region.forecast.dateIssued | date:'EEEE MMMM d, y h:mm a' | uppercase }}
        .col-xs-6
            dl
                dd.small
                    strong.ac-text-primary VALID UNTIL
                dt.small
                    span.ac-text-default {{ current.region.forecast.validUntil | date:'EEEE MMMM d, y h:mm a' | uppercase }}
    .row
        .col-xs-12
            p.ac-forecast-highlights
                strong(ng-bind-html="current.region.forecast.highlights | stripStyles")
    .row
        .col-xs-12
            ul.nav.nav-pills(role='tablist')
              li.active
                a(href="", role='tab', data-target="#forecast", data-toggle='tab') Public Avalanche Forecast
              li
                a(href="", role='tab', data-target="#problems", data-toggle='tab') Forecast Problems
              li
                a(href="", role='tab', data-target="#details", data-toggle='tab') Forecast Details
            .tab-content
                #forecast.tab-pane.active
                    .row
                        .col-xs-12
                            .panel.panel-default
                                .panel-heading
                                    | {{ current.region.forecast.dangerRatings[0].date | date:'EEEE' }}
                                .panel-body.ac-forecast-nowcast
                                    img.ac-nowcast(src="/api/forecasts/{{current.region.polygon.feature.properties.id}}/nowcast.svg")
                                table.table.table-condensed.ac-forecast-days
                                    thead.ac-thead-dark
                                        tr
                                            th
                                            th {{ current.region.forecast.dangerRatings[1].date | date:'EEEE' }}
                                            th {{ current.region.forecast.dangerRatings[2].date | date:'EEEE' }}
                                    tbody
                                        tr
                                            td.ac-veg-zone--alp 
                                                strong Alpine
                                            td(class="ac-danger-rating--{{ current.region.forecast.dangerRatings[1].dangerRating.alp.split(':')[1].toLowerCase()}}") 
                                                strong {{ current.region.forecast.dangerRatings[1].dangerRating.alp.replace(':', ' ') }}
                                            td(class="ac-danger-rating--{{ current.region.forecast.dangerRatings[2].dangerRating.alp.split(':')[1].toLowerCase()}}") 
                                                strong {{ current.region.forecast.dangerRatings[2].dangerRating.alp.replace(':', ' ') }}
                                        tr
                                            td.ac-veg-zone--tln 
                                                strong Treeline
                                            td(class="ac-danger-rating--{{ current.region.forecast.dangerRatings[1].dangerRating.tln.split(':')[1].toLowerCase()}}") 
                                                strong {{ current.region.forecast.dangerRatings[1].dangerRating.tln.replace(':', ' ') }}
                                            td(class="ac-danger-rating--{{ current.region.forecast.dangerRatings[2].dangerRating.tln.split(':')[1].toLowerCase()}}") 
                                                strong{{ current.region.forecast.dangerRatings[2].dangerRating.tln.replace(':', ' ') }}
                                        tr
                                            td.ac-veg-zone--btl 
                                                strong Bellow Treeline
                                            td(class="ac-danger-rating--{{ current.region.forecast.dangerRatings[1].dangerRating.btl.split(':')[1].toLowerCase()}}") 
                                                strong {{ current.region.forecast.dangerRatings[1].dangerRating.btl.replace(':', ' ') }}
                                            td(class="ac-danger-rating--{{ current.region.forecast.dangerRatings[2].dangerRating.btl.split(':')[1].toLowerCase()}}") 
                                                strong{{ current.region.forecast.dangerRatings[2].dangerRating.btl.replace(':', ' ') }}
                                        tr
                                            td
                                                strong Confidence:
                                            td(colspan="2")
                                                span.ac-text-default{{ current.region.forecast.confidence }}

                #problems.tab-pane
                    #problemsAccordion.panel-group
                        .panel.panel-info(ng-repeat="problem in current.region.forecast.problems")
                            .panel-heading
                                h4.panel-title
                                    a(href='', data-target="#problem{{$index}}", data-toggle='collapse', data-parent='#problemsAccordion')
                                      | {{ problem.type }}
                                      i.fa.fa-fw.fa-caret-down
                            div(id="problem{{$index}}").panel-collapse.collapse(ng-class="{in: $index === 0}")
                                .panel-body
                                    {{ problem.comment  | stripStyles}}
                                    h5 Travel and Terrain Advice
                                    p {{ problem.travelAndTerrainAdvice | stripStyles }}

                #details.tab-pane
                    #detailsAccordion.panel-group
                        .panel.panel-info
                            .panel-heading
                                h4.panel-title
                                    a(href='', data-target="#avalancheSummary",data-toggle='collapse', data-parent='#detailsAccordion')
                                      | Avalanche Summary
                                      i.fa.fa-fw.fa-caret-down
                            #avalancheSummary.panel-collapse.collapse.in
                                .panel-body
                                    {{ current.region.forecast.avalancheSummary | stripStyles}}
                        .panel.panel-info
                            .panel-heading
                                h4.panel-title
                                    a(href='', data-target="#snowpackSummary",data-toggle='collapse', data-parent='#detailsAccordion')
                                      | Snowpack Summary
                                      i.fa.fa-fw.fa-caret-down
                            #snowpackSummary.panel-collapse.collapse
                                .panel-body
                                    {{ current.region.forecast.snowpackSummary | stripStyles }}
                        .panel.panel-info
                            .panel-heading
                                h4.panel-title
                                    a(href='', data-target="#weatherForecast",data-toggle='collapse', data-parent='#detailsAccordion')
                                      | Weather Forecast
                                      i.fa.fa-fw.fa-caret-down
                            #weatherForecast.panel-collapse.collapse
                                .panel-body
                                    {{ current.region.forecast.weatherForecast | stripStyles }}